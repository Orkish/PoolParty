<div id="div-banner">
  <img src="/assets/logo.png" id="logo" alt="logo">
</div>

<div id="trip-container">
	<h3>Available trips:</h3>
	<div class="trip-table">
		<table>
			<thead class="table-headers">
				<td>Date</td>
				<td>Time</td>
				<td>Location</td>
				<td>Destination</td>
				<td>Spaces</td>
			</thead>
		<% @trips.each do |trip| %>
			<tbody>
				<tr class="trips" data-trip_id="<%= trip.id %>" data-user_id="<%= trip.user_id %>">
					<td><%= trip.date %></td>
					<td><%= trip.time %></td>
					<td><%= trip.location %></td>
					<td><%= trip.destination %></td>
					<td><%= trip.spaces %></td>
					<td class="request" >Request a Ride!</td>
				</tr>
			</tbody>
		<% end %>
		</table>
	</div>

	<div id="show-trip">Select a Trip to view details.</div>
</div>
