<div id="image-uploader">
  <% user = current_user %>  
  <%= form_for user, :html => {:multipart => true} do |f| %>
    <p>
      <%= f.label "Profile Image" %><br />
    </p>
    <p>
      <%= f.file_field :image %>
    </p>
    <p>
      <%= f.label :remote_image_url, "Image URL" %><br />
      <%= f.text_field :remote_image_url %>
    </p>
    <p>
      <%= f.submit "Submit" %>
    </p>
  <% end %>
</div>
<div id="div-banner">
  <div id="logo">
    <img src="assets/logo.png" id="logo" alt="logo">
  </div>
  <div id="nav">
    <a href="/index">About Us</a> |
    <a href="/profile/trips">View All Trips</a> |
    <% if user_signed_in? %>
      <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
    <% end %>
  </div>
</div>
<div id="profile-div">
  <img src="assets/samurai.jpg" id="profile-img" alt="">
  <%= image_tag user.image_url.to_s %>
</div>
<div id="profile-container">
